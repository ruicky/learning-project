/**index.wxss**/

.index-container {
  width: 100%;
  height: 100%;
  /*display: flex;*//*flex: row;*/
}

/*大图*/

.big-image-container {
  width: 100%;
  height: 872rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weather-bg-img {
  width: 100%;
  height: 872rpx;
}

.big-image-address-container {
  position: absolute;
  display: flex;
  flex-direction: row;
  top: 28rpx;
  left: 130rpx;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  width: 488rpx;
  height: 58rpx;
  align-items: center;
}

.big-image-address-container image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.big-image-address-container text {
  color: #fff;
  font-size: 28rpx;
  margin-left: 24rpx;
}

.degrees {
  position: absolute;
  top: 280rpx;
  left: 306rpx;
  color: #fff;
  font-size: 134rpx;
}

.wind {
  position: absolute;
  top: 506rpx;
  color: #fff;
  font-size: 32rpx;
}

.pm25 {
  position: absolute;
  top: 588rpx;
  color: #fff;
  font-size: 32rpx;
}

/*雨量*/

.rain-container {
  clear: both;
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  background-color: #fff;
}

.rain-container text {
  margin-top: 50rpx;
  color: #666;
  font-size: 32rpx;
}

.rain-container image {
  width: 100%;
  height: 206rpx;
  margin-top: 20rpx;
}

/*时间天气预报*/

.hour-container {
  /*width: 100%；*/
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.hour-title {
  color: #666;
  margin-top: 30rpx;
  margin-bottom: 32rpx;
  font-size: 32rpx;
}

.hour-item-list {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 306rpx;
}

.hour-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
  flex-shrink: 0;
}

.hour-time {
  color: #b0b0b0;
  font-size: 24rpx;
}

.hour-img {
  width: 30px;
  height: 30px;
  margin-top: 44rpx;
}

.hour-degrees {
  color: #666;
  margin-top: 28rpx;
  font-size: 24rpx;
}

.hour-air-quality {
  margin-top: 24rpx;
  color: #94bdaf;
  font-size: 24rpx;
}

.hour-air-mark {
  margin-top: 8rpx;
  color: #94bdaf;
  font-size: 24rpx;
}

/*天-天气预报*/

.day-container {
  width: 100%;
  background-color: #fff;
  margin-top: 40rpx;
}

.day-list {
  display: flex;
  flex-direction: row;
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
  flex-shrink: 0;
}

.week-time {
  color: #666;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.day-time {
  color: #acacac;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.day-img {
  width: 30px;
  height: 30px;
  margin-top: 46rpx;
}

.day-degrees {
  color: #666;
  font-size: 24rpx;
  margin-top: 50rpx;
}

.day-air-quality {
  font-size: 24rpx;
  color: #97bf3b;
  margin-top: 12rpx;
}

.day-air-mark {
  font-size: 24rpx;
  color: #97bf3b;
  margin-top: 8rpx;
}

.day-wind {
  color: #666;
  font-size: 24rpx;
  margin-top: 48rpx;
}

.day-wind-num {
  color: #666;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/*提示*/

.reminder-container {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.reminder-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 186rpx;
  height: 190rpx;
  border-right: 1rpx solid #e8e8e8;
}

.reminde-img {
  width: 52rpx;
  height: 52rpx;
  margin-top: 20rpx;
}

.reminder-msg {
  color: #666;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.reminder-pro {
  color: #c0c0c0;
  font-size: 20rpx;
  margin-top: 14rpx;
}

/*天气-icon*/

/*晴天*/

.CLEAR_DAY {
  background-position: 0 0;
}

/*晴夜*/

.CLEAR_NIGHT {
  background-position: 0 -320px;
}

/*多云*/

.PARTLY_CLOUDY_DAY {
  background-position: -240px 0px;
}

.PARTLY_CLOUDY_NIGHT {
  background-position: -160px -400px;
}

/*阴*/
.CLOUDY {
  background-position: -240px 0;
}

/*雨*/

.RAIN {
  background-position: 0 -80px;
}

/*雪 */

.SNOW {
  background-position: -400px -80px;
}

/*风*/

.WIND {
  background-position: -160 -560px;
}

/*雾
  */
 
.FOG {
  background-position: -720px 0px;
}
